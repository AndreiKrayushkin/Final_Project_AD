        android:id="@+id/iconLikeInFavoriteWineLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/borderWineItemFavorite"
        app:layout_constraintTop_toTopOf="@id/nameWineInFavoriteWineLayout"
        android:src="@drawable/ic_baseline_favorite_24"
